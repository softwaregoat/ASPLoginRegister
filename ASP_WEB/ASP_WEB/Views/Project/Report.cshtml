@model IEnumerable<ASP_WEB.Models.Batch>

@{
    ViewBag.Title = "Report";
    var batchs = Model;
}
    <h2>Report</h2>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <span>Report Type</span>
            </div>
            <div class="col-md-5">
                <select id="reportType">
                    <option value="value1">text1</option>
                    <option value="value2">text2</option>
                </select>
            </div>

        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" name="checkAll" id="checkAll" />Check box
                        </th>
                        <th>
                            Batch Name
                        </th>
                    </tr>
                </thead>
                @foreach (var item in batchs)
                {
                    <tbody>
                        <tr data-id="@item.BatchID">
                            <td>
                                <input type="checkbox" class="checkbox" />
                            </td>
                            <td>
                                @item.BatchName
                            </td>
                        </tr>
                    </tbody>

                }
            </table>
        </div>

        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <input type="button" class="form-control" id="export" value="View Report" />
            </div>
            <div class="col-md-4">

            </div>

        </div>
    </div>
        @section Scripts{
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
            <script>
            $(document).ready(function () {
                $('#checkAll').click(function () {
                    $('.checkbox').each(function (i, em) {
                        $(this).prop('checked', true);
                    });
                });
                $('#export').click(function () {
                    var batchIDs = [];
                    $('tbody tr').each(function (i, em) {
                        if ($(this).find('.checkbox').prop('checked')) {
                            batchIDs.push($(this).data('id'));
                        }
                    });

                    var data = JSON.stringify({
                        'batchIDs': batchIDs
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Report")',
                        data: data,
                        success: function (response) {
                            toastr.success(response);
                        },
                        contentType: 'application/json'
                    });
                });
            });
            </script>
        }
